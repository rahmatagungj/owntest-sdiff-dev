{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES5",
    "removeComments": true,
    "preserveConstEnums": true,
    "module" : "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": false,
    "allowJs": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
}
